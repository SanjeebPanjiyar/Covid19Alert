@using Web.HtmlHelper
@{
    ViewData["Title"] = "Registrartion";
}

<section class="w-100">
    <div class="container">
        <div class="row">
            <div class="col-lg-6 col-md-8 col-12 m-auto px-0 py-3  rounded shadow border bg-white">
                <div class="p-3">
                    <h1 class="mb-2 text-center">
                        Covid19 Alert System
                    </h1>
                    <h2 class="mb-1 text-center">
                        Registation
                    </h2>
                    <registration-user inline-template>
                        <validation-observer tag="div" ref="observer" v-slot="{ handleSubmit, valid, validate }">
                            <div class="main-card mb-3">
                                <form v-on:submit.prevent="handleSubmit(submit)" autocomplete="off">
                                    <div class="position-relative form-group">
                                        <input-field v-model="model.FirstName" rules="required|max:50" label="First Name" name="FirstName" />
                                    </div>
                                    <div class="position-relative form-group">
                                        <input-field v-model="model.LastName" rules="required|max:50" label="Last Name" name="LastName" />
                                    </div>
                                    <div class="position-relative form-group">
                                        <input-field v-model="model.EmailAddress" rules="required|max:50|email" label="Email" name="Email" />
                                    </div>
                                    <div class="position-relative form-group">
                                        <input-field v-model="model.PhoneNumber" rules="required|max:50" label="Phone" name="PhoneNumber" />
                                    </div>
                                    <div class="position-relative form-group">
                                        <input-field v-model="model.IdNumber" rules="required|max:50" label="IdNumber" name="Id Number" />
                                    </div>
                                    <div class="position-relative form-group">
                                        <input-field v-model="model.Password" vid="confirmation" rules="required|max:128" label="Password" type="password" name="Password" minlength="8" />
                                    </div>
                                    <div class="position-relative form-group">
                                        <input-field v-model="model.ConfirmPassword" rules="confirmed:confirmation" label="Confirm Password" type="password" name="ConfirmPassword" />
                                    </div>
                                    <div class="form-group row" v-show="UsernameValidationMsg">
                                        <div class="col-sm-3 "></div>
                                        <div class="col-sm-9">
                                            <label class="required-field-message">{{UsernameValidationMsg}}</label>
                                        </div>
                                    </div>

                                    <button v-on:click="validate" type="submit" class="mt-1 btn btn-fluid no__border-radius btn-primary shadow">Registration</button>
                                </form>
                            </div>
                        </validation-observer>
                    </registration-user>
                </div>
            </div>
        </div>
    </div>
</section>

