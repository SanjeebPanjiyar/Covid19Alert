@using Infrastructure.BaseViewModel
@model BaseApplicationUserViewModel
@{

}


<section class="w-100">
    <div class="container">
        <div class="row">
            <div class="col-lg-6 col-md-8 col-12 m-auto px-0 py-3  rounded shadow border bg-white">
                <div class="p-3">
                    <h2 class="mb-1 text-center">
                        User Details
                    </h2>
                    <registration-user inline-template>
                        <validation-observer tag="div" ref="observer" v-slot="{ handleSubmit, valid, validate }">
                            <div class="main-card mb-3">
                                <form v-on:submit.prevent="handleSubmit(submit)" autocomplete="off">
                                    <div class="position-relative form-group">
                                        <div class="form-group row">
                                        <label class="col-sm-3 col-form-label">First Name</label>
                                        <div class="col-sm-9">
                                            <span>
                                                <input type="text" class="form-control" style="background-image: url(&quot;data:image/png;base64,&quot;); background-repeat: no-repeat; background-attachment: scroll; background-size: 16px 18px; background-position: 98% 50%; cursor: auto;">
                                                <span class="required-field-message"></span>
                                             </span>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="form-group row align-items-center">
                                        <label class="col-sm-3 col-form-label">Active</label>
                                        <div class="col-sm-9">
                                            <input type="checkbox" v-model="model.IsActive" />
                                        </div>
                                    </div>

                                    <button v-on:click="validate" type="submit" class="mt-1 btn btn-fluid no__border-radius btn-primary shadow">Save</button>
                                </form>
                            </div>
                        </validation-observer>
                    </registration-user>
                </div>
            </div>
        </div>
    </div>
</section>